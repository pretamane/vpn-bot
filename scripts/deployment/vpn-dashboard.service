[Unit]
Description=VPN Bot Database Dashboard
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/vpn-bot
ExecStartPre=/bin/bash -c 'fuser -k 8081/tcp || true'
ExecStart=/home/ubuntu/.local/bin/sqlite_web /home/ubuntu/vpn-bot/db/vpn_bot.db --port 8081 --no-browser --host 127.0.0.1
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
